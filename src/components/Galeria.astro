---
import { Image } from "@astrojs/image/components";
const localImage = "/src/images/rompecabeza.svg";
const localAlt = "rompecabeza";
---

<div id="galeria" class="pt-24 p-8">
    <h1 class="text-center text-6xl lg:pt-10 font-bold">Galeria</h1>
    <div class="grid lg:grid-cols-3 lg:grid-rows-3 pt-6">
        <Image src={localImage} alt={localAlt} width={400} height={400} />
        <img src="/src/images/rompecabeza.svg" alt="rompecabeza" class="img" />
        <img src="/src/images/jordan.svg" alt="jordan" class="img" />
        <img src="/src/images/cajon.svg" alt="cajon" class="img" />
        <img src="/src/images/doblemarco.svg" alt="doble marco" class="img" />
        <img src="/src/images/titulo.svg" alt="titulo" class="img" />
        <img src="/src/images/marialuisa.svg" alt="marialuisa" class="img" />
        <img src="/src/images/rustico.svg" alt="rustico" class="img" />
        <img
            src="/src/images/cuadro-ancho.svg"
            alt="cuadro ancho"
            class="img"
        />
        <img src="/src/images/magic.svg" alt="magic johnson" class="img" />
    </div>
</div>

<style>
    body {
        background-color: #3d3d3d;
        color: white;

        font-family: "Roboto", sans-serif;
    }

    .img {
        transition: transform 0.6s;
        animation: scaleAnim 1s ease-in-out 1;
    }

    .img:hover {
        transform: scale(1.1);
    }

    @keyframes scaleAnim {
        from {
            transform: scale(0);
        }
        to {
            transform: scale(1);
        }
    }
</style>
